<?xml version="1.0" encoding="utf-8"?>
<manifest package="cn.kk.tractorhelper"
    android:versionCode="1"
    android:versionName="1.0" xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-sdk
        android:minSdkVersion="3"
        android:targetSdkVersion="13" />

    <application
        android:allowBackup="true"
        android:allowClearUserData="true"
        android:icon="@drawable/icon_app"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light" >
        <activity
            android:name=".GameStartActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ChooseLevelActivity" android:screenOrientation="landscape" android:icon="@drawable/icon_app" android:label="@string/app_name">
        </activity>
        <activity android:name=".SelectTrumpActivity" android:screenOrientation="landscape" android:icon="@drawable/icon_app" android:label="@string/app_name">
        </activity>
        <activity android:name=".PlayGameActivity" android:screenOrientation="landscape" android:icon="@drawable/icon_app" android:label="@string/app_name">
        </activity>
    </application>

</manifest>